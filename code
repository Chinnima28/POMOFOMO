
app.py

from flask import Flask, render_template, request, jsonify
import time
import threading

app = Flask(__name__)

@app.route('/')
def index():
    return render_template('index.html')

@app.route('/start_timer', methods=['POST'])
def start_timer():
    data = request.get_json()
    minutes = int(data['minutes'])
    seconds = minutes * 60
    timer_thread = threading.Thread(target=timer, args=(seconds,))
    timer_thread.start()
    return jsonify({'message': 'Timer started'})

def timer(seconds):
    while seconds:
        time.sleep(1)
        seconds -= 1
    print("Time's up!")  # This will be replaced by a notification or other action

if __name__ == '__main__':
    app.run(debug=True)

index.html

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pomodoro Timer</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='styles.css') }}">
</head>
<body>
    <center>
        <h1>Pomodoro Timer</h1>
        <div>
            <input type="text" id="timeInput" placeholder="Enter time in minutes">
            <button onclick="startPomodoro()">Start Timer</button>
        </div>
        <div id="countdown">00:00</div>
    </center>

    <script>
        function startPomodoro() {
            let timeInput = document.getElementById('timeInput').value;
            fetch('/start_timer', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ minutes: timeInput })
            })
            .then(response => response.json())
            .then(data => console.log(data.message))
            .catch(error => console.error('Error:', error));
        }
    </script>
</body>
</html>


